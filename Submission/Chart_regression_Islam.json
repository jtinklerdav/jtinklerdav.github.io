{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Graph 7: Wine Consumption on Islamic Population",
    "subtitle": [
      "Proportion of Islamic Population (x), Wine Consumption per Capita (y). 2010 data",
      "Source: World Bank, OIV Statistics, Pew Research Center"
    ],
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "black",
    "subtitleColor": "black"
  },
  "height": 400,
  "width": 400,
  "background": null,
  "data": {
    "url": "https://raw.githubusercontent.com/jtinklerdav/jtinklerdav.github.io/main/Project/DATA_regress_Islam",
    "format": {"type": "json"}
  },
  "layer": [
    {
      "selection": {
        "picked": {
          "empty": "none",
          "bind": {
            "Continent": {
              "input": "select",
              "options": [
                "No Continent selected",
                "Africa",
                "Asia",
                "Europe",
                "North America",
                "Oceania",
                "South America"
              ],
              "name": "Select a Continent: "
            }
          },
          "type": "single",
          "fields": ["Continent"]
        },
        "grid": {
          "type": "interval",
          "bind": "scales",
          "on": "[mousedown, window:mouseup] > window:mousemove!",
          "translate": "[mousedown, window:mouseup] > window:mousemove!",
          "zoom": "wheel!",
          "resolve": "global"
        }
      },
      "mark": {"type": "point", "filled": true},
      "encoding": {
        "color": {
          "value": "#D34C0C",
          "condition": {
            "selection": "picked",
            "value": "#1995ad"
          }
        },
        "size": {
          "value": 70,
          "condition": {"value": 120, "selection": "picked"}
        },
        "opacity": {
          "value": 0.5,
          "condition": {"value": 1, "selection": "picked"}
        },
        "x": {
          "field": "Percentage",
          "scale": {"zero": false},
          "type": "quantitative",
          "title": null,
          "axis": {
            "labelColor": "black",
            "titleColor": "black",
            "grid": false,
            "title": "Percentage of Population that practises Islam"
          }
        },
        "y": {
          "field": "Consumption pc",
          "scale": {"zero": false},
          "type": "quantitative",
          "axis": {
            "labelColor": "black",
            "titleColor": "black",
            "grid": false,
            "title": "Wine Consumption per Capita (litres)"
          }
        },
        "tooltip": [
          {"field": "Continent", "type": "nominal", "title": "Continent"},
          {"field": "Country", "type": "nominal", "title": "Country"},
          {
            "field": "Percentage",
            "type": "nominal",
            "title": "Muslim Population"
          },
          {
            "field": "Consumption pc",
            "type": "nominal",
            "title": " Consumption per Capita"
          },
          {"field": "Population", "type": "quantitative", "title": "Population"}
        ]
      }
    },
    {
      "mark": {"type": "line", "color": "#1995ad"},
      "transform": [
        {"regression": "Consumption pc", "on": "Percentage", "extent": [0, 100]}
      ],
      "encoding": {
        "x": {"field": "Percentage", "type": "quantitative"},
        "y": {"field": "Consumption pc", "type": "quantitative"}
      }
    },
    {
      "transform": [
        {"regression": "Consumption pc", "on": "Percentage", "params": true},
        {"calculate": "'RÂ²: '+format(datum.rSquared, '.2f')", "as": "R2"}
      ],
      "mark": {
        "type": "text",
        "color": "#1995ad",
        "x": 390,
        "align": "right",
        "y": 15,
        "size": 15
      },
      "encoding": {"text": {"type": "nominal", "field": "R2"}}
    }
  ]
}

{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Graph 5: Wine Consumption on GDP per capita",
    "subtitle": ["GDP per capita (x), Wine Consumption per capita (y). 2020 data", "Source: World Bank, OIV Statistics"],
        "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "black",
    "subtitleColor": "black"
  },
  "height": 400,
  "width": 400,
  "background": null,
  "data": {
    "url": "https://raw.githubusercontent.com/jtinklerdav/jtinklerdav.github.io/main/Project/DATA_GDP_vs_Consumption.json",
    "format": {"type": "json"}
  },
  "layer": [
    {
      "selection": {
        "picked": {
          "empty": "none",
          "bind": {
            "Continent": {
              "input": "select",
              "options": [
                "No Continent selected",
                "Africa",
                "Asia",
                "Europe",
                "North America",
                "Oceania",
                "South America"
              ],
              "name": "Select a Continent: "
            }
          },
          "type": "single",
          "fields": ["Continent"]
        },
        "grid": {
          "type": "interval",
          "bind": "scales",
          "on": "[mousedown, window:mouseup] > window:mousemove!",
          "translate": "[mousedown, window:mouseup] > window:mousemove!",
          "zoom": "wheel!",
          "resolve": "global"
        }
      },
      "mark": {"type": "point","filled": true},
      "encoding": {
        "color": {
          "value": "#D34C0C2",
          "condition": {
            "selection": "picked",
            "value": "#1995ad"
          }
        },
        "size": {
          "value": 70,
          "condition": {"value": 120, "selection": "picked"}
        },
        "opacity": {
          "value": 0.5,
          "condition": {"value": 0.9, "selection": "picked"}
        },
        "x": {
          "field": "GDP pc",
          "scale": {"zero": false},
          "type": "quantitative",
          "title": null,
          "axis": {
            "labelColor": "black",
            "titleColor": "black",
            "grid": false,
            "title": "GDP per Capita (US$)"
          }
        },
        "y": {
          "field": "Consumption pc",
          "scale": {"zero": false},
          "type": "quantitative",
          "axis": {
            "labelColor": "black",
            "titleColor": "black",
            "grid": false,
            "title": "Wine Consumption per Capita (litres)"
          }
        },
        "tooltip": [
          {"field": "Continent","type": "nominal","title": "Continent"},
          {"field": "Country Name","type": "nominal","title": "Country"},
          {"field": "GDP pc","type": "nominal","title": "GDP per Capita"},
          {"field": "Consumption pc","type": "nominal","title": "Wine Consumption per Capita"},
          {"field": "Population","type": "nominal","title": "Population"}
          
        ]
      }
    },
    {
      "mark": {"type": "line", "color": "#1995ad"},
      "transform": [
        {
          "regression": "Consumption pc",
          "on": "GDP pc",
          "extent": [0, 120000]
        }
      ],
      "encoding": {
        "x": {"field": "GDP pc", "type": "quantitative"},
        "y": {"field": "Consumption pc", "type": "quantitative"}
      }
    },
    {
      "transform": [
        {"regression": "Consumption pc", "on": "GDP pc", "params": true},
        {"calculate": "'RÂ²: '+format(datum.rSquared, '.2f')", "as": "R2"}
      ],
      "mark": {
        "type": "text",
        "color": "#1995ad",
        "x": 390,
        "align": "right",
        "y": 15,
        "size": 15
      },
      "encoding": {"text": {"type": "nominal", "field": "R2"}}
    }
  ]
}
